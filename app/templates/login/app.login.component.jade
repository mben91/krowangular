.col-md-6.col-md-offset-3
  .alert.alert-info
  h2 Login
  form(name='form', (ngSubmit)!="f.form.valid && login()", #f='ngForm', novalidate='')
    .form-group([ngClass]!="{ 'has-error': f.submitted && !username.valid }")
      label(for='username') Username
      input.form-control(type='text', name='username', [(ngModel)]='model.username', #username='ngModel', required='')
      .help-block(*ngIf!="f.submitted && !username.valid") Username is required
    .form-group([ngClass]!="{ 'has-error': f.submitted && !password.valid }")
      label(for='password') Password
      input.form-control(type='password', name='password', [(ngModel)]='model.password', #password='ngModel', required='')
      .help-block(*ngIf!='f.submitted && !password.valid') Password is required
    .form-group
      button.btn.btn-primary([disabled]='loading') Login
      img(*ngIf='loading', src='data:image/gif;base64,')
    .alert.alert-danger(*ngIf='error') {{error}}