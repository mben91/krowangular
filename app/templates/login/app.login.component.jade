.ui.grid
    .column
        h2 Login
        .ui.tiny.visible.error.message(*ngIf='f.submitted && error') {{error}}
        form.ui.form(name='form', (ngSubmit)!="f.form.valid && login()", #f='ngForm', novalidate='')
            .field([ngClass]!="{ 'has-error': f.submitted && !email.valid }")
                label(for='email') Email
                input(type='text', name='email', [(ngModel)]='model.email', #email='ngModel', required='', pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,63}$")
                .ui.tiny.visible.error.message(*ngIf!="f.submitted && f.controls.email.errors?.required") Email is required
                .ui.tiny.visible.error.message(*ngIf!="f.submitted && f.controls.email.errors?.pattern") Invalid Email Address
            .field([ngClass]!="{ 'has-error': f.submitted && !password.valid }")
                label(for='password') Password
                input(type='password', name='password', [(ngModel)]='model.password', #password='ngModel', required='')
                .ui.tiny.visible.error.message(*ngIf!='f.submitted && !password.valid') Password is required
            .field
                button.ui.button([disabled]='loading') Login
                img(*ngIf='loading', src='data:image/gif;base64,')
              